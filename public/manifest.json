{
  "name": "Skincare Ext",
  "description": "Extension that analyzes the ingredients of skincare products and provides a rating based on the ingredients.",
  "version": "0.0.2",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup",
    "default_icon": {
      "16": "icons8-herb-48.png",
      "48": "icons8-herb-48.png",
      "128": "icons8-herb-96.png"
    }
},
"background": {
  "service_worker": "background.js"
},
"icons": {
    "16": "icons8-herb-48.png",
    "48": "icons8-herb-48.png",
    "128": "icons8-herb-96.png"
}
}
